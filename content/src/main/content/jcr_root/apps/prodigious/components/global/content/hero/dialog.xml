<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tabs jcr:primaryType="cq:TabPanel">
            <items jcr:primaryType="cq:WidgetCollection">
                <configuration jcr:primaryType="cq:Panel" title="Configuration">
					<items jcr:primaryType="cq:WidgetCollection">
						<title
						    jcr:primaryType="cq:Widget"
						    fieldLabel="Title"
						    name="./title"
							xtype="textfield" />
						<message
						    jcr:primaryType="cq:Widget" 
						    allowBlank="false"
						    fieldLabel="Message" 
						    name="./message"
							xtype="textarea" />
						<linkTitle
						    jcr:primaryType="cq:Widget"
						    allowBlank="false" 
						    fieldLabel="Link Title" 
						    name="./linkTitle"
							xtype="textfield" />
						<linkHref
						    jcr:primaryType="cq:Widget" 
						    allowBlank="false"
						    fieldLabel="Link HREF" 
						    name="./linkHref"
							xtype="pathfield" />
					</items>
				</configuration>
            </items>
        </tabs>
    </items>
</jcr:root>
