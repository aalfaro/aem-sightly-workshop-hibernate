<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Modal"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
        	<configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Text to include as the title of the modal."
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <message
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Text to include as the message of the modal."
                        fieldLabel="Message"
                        name="./message"
                        xtype="richtext"/>
                    <closeTitle
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Text to include as the close button title."
                        fieldLabel="Close Title"
                        name="./closeTitle"
                        xtype="textfield"/>
                    <buttonTitle
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Text to include as the main button title."
                        fieldLabel="Button Title"
                        name="./buttonTitle"
                        xtype="textfield"/>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
